<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/selector_blue_trans"
    >
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/drawer_group_name"
	    android:gravity="center_vertical"
	    android:text="@string/preference_name"
	    style="@style/PrimaryTextAppeare"
	    android:padding="16dp"
	    android:singleLine="true"
	    />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/drawer_group_number"
	    android:layout_alignParentRight="true"
	    android:gravity="center_vertical"
	    android:padding="16dp"
	    android:text="@string/preference_name"/>
	<TextView
	    android:layout_width="3dp"
	    android:layout_height="wrap_content"
	    android:id="@+id/drawer_group_color"
	    android:gravity="center_vertical"
	    android:background="@color/pink"
	    android:padding="16dp"
	    style="@style/PrimaryTextAppeare"
	    android:text=" "/>
</RelativeLayout>
