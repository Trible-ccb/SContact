<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/edite_input_height"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="@dimen/edit_pwd_padding"
     >
   	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_hint_view"
        android:paddingRight="4dp"
        android:textColor="@color/grey_999999"
        android:layout_centerVertical="true"
        android:text=""

        />
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_input_box"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:background="@color/transparent"
        android:layout_toRightOf="@id/edit_hint_view"
        android:textColorHint="@color/grey_999999"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginRight="32dp"
        />
	<CheckBox 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:id="@+id/checkbox"
	    android:button="@drawable/selector_pwd_chekbox_btn"
	    />

</RelativeLayout>
