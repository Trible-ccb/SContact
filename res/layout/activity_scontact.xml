<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SContactMainActivity"
    android:background="@drawable/common_activity_bg"
     >
	<android.support.v4.widget.DrawerLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/drawer"
	    >
	   <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/frame_users_list"
	        />
	    <LinearLayout
		    android:layout_width="@dimen/drawer_width"
	        android:layout_height="match_parent"
	        android:layout_gravity="left"
	        android:id="@+id/drawer_bar"
	        android:focusable="true"
	        android:background="@color/white"
	        android:focusableInTouchMode="true"
	        android:layout_marginLeft="10dp"
	        >
	        <include layout="@layout/drawer_group_list"/>
	    </LinearLayout>

	</android.support.v4.widget.DrawerLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tip"
	    android:text="dsfsdfsd"
	    android:layout_centerHorizontal="true"
	    android:background="@color/grey_a6"
	    android:textColor="@color/white_f9"
	    android:padding="4dp"
	    android:visibility="invisible"
	    />
</RelativeLayout>
