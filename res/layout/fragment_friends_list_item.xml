<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/users_list_item_height"
    android:gravity="center_vertical"
    android:padding="10dp"
     >

    <ImageView
        android:layout_width="@dimen/users_list_item_image_height_width"
        android:layout_height="@dimen/users_list_item_image_height_width"
        android:id="@+id/users_list_item_image"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/users_list_item_image"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/users_list_item_name"
            android:text="@string/app_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/users_list_item_desc"
            android:text="@string/app_name"
            />
      </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/users_list_item_time"
            android:layout_alignParentRight="true"
            android:text="@string/app_name"
            android:gravity="right"
            />        
</RelativeLayout>
