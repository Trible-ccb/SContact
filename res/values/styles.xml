<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoteTextTitleAppeare">
        <item name="android:textColor">@color/black_5</item>
    	<item name="android:textSize">18dp</item>
    </style>
    <style name="PreviewNoteTextAppeare">
        <item name="android:textColor">@color/grey_999999</item>
    	<item name="android:textSize">16dp</item>
    </style>
    <style name="NoteTimeTextAppeare">
        <item name="android:textColor">@color/grey_999999</item>
    	<item name="android:textSize">14dp</item>
    </style>
    <style name="WhiteButtonTextAppeare">
        <item name="android:textColor">#4f5050</item>
    	<item name="android:textSize">20sp</item>
    </style>
    <style name="BlueButtonTextAppeare">
        <item name="android:textColor">@color/white</item>
    	<item name="android:textSize">20sp</item>
    </style>
     <style name="CustomTabStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ChooseActionItemStyle">
		<item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_5</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/pressor_green_trans</item>
    </style>
        <!-- Dialog theme. -->
	<style name="CustomDialog" parent="@android:style/Theme.Dialog"> 
    <item name="android:windowFrame">@null</item> 
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowContentOverlay">@null</item> 
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> 
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item> 
    </style> 
    <style name="CustomProgressDialog" parent="@style/CustomDialog"> 
        <item name="android:windowBackground">@android:color/transparent</item> 
        <item name="android:windowNoTitle">true</item> 
    </style>
        <!-- Robo Theme. -->
    <style name="RoboTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
